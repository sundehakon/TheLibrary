@inherits LayoutComponentBase
@inject SharedDataService SharedDataService
@inject NavigationManager NavigationManager

<PageTitle>TheLibrary.com</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="/fetchdata">
                <button class="button-25"><span class="oi oi-basket"></span> Basket</button>
            </a>
            <a href="https://github.com/sundehakon" target="_blank">
                <img src="/images/github.png" alt="GitHub logo" class="github-image">
            </a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private string name = "";

    private void Navigate()
    {
        NavigationManager.NavigateTo("login");
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        if (SharedDataService.password)
        {
            name = SharedDataService.Name;
            StateHasChanged();
        }
    }
}
