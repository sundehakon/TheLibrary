            <button @onclick="NavigateToFetchData">
                <span class="oi oi-basket" aria-hidden="true"></span> Add to basket
            </button>
        </div>
    </div>
</div>

@code {
    private void NavigateToFetchData()
    {
        Navigation.NavigateTo("fetchdata");
    }
    private void NavigateToEncyclopedia()
    {
        Navigation.NavigateTo("encyclopedia");
    }

        private void NavigateToBible()
    {
        Navigation.NavigateTo("bible");
    }
        private void NavigateToRichdad()
    {
        Navigation.NavigateTo("richdad");
    }

    Book bible = new Book { Title = "The Bible", Author = "Unknown" };
    Book americanpsycho = new Book { Title = "American Psycho", Author = "Bret Easton Ellis" };
    void AddBookToBasket(Book book)
    {
        BasketService.AddBook(book);
        Navigation.NavigateTo("fetchdata");
    }
}

