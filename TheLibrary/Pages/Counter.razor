        <div class="booktitle">
            <p>"Elon Musk"</p>
        </div>
        <div class="button-25">
            <button @onclick="NavigateToFetchData">
                <span class="oi oi-basket" aria-hidden="true"></span> Add to basket
            </button>
        </div>
    </div>
    <div id="book-box7" class="book-box">
        <img class="counter-images" id="forceofnature-cover" src="/images/forceofnature.jpeg" alt="Cover of Force Of Nature" @onclick="NavigateToEncyclopedia">
        <div class="booktitle">
            <p>"Force Of Nature"</p>
        </div>
        <div class="button-25">
            <button @onclick="NavigateToFetchData">
                <span class="oi oi-basket" aria-hidden="true"></span> Add to basket
