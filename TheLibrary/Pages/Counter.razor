@code {
    private void NavigateToFetchData()
    {
        Navigation.NavigateTo("fetchdata");
    }
    private void NavigateToEncyclopedia()
    {
        Navigation.NavigateTo("encyclopedia");
    }

        private void NavigateToBible()
    {
        Navigation.NavigateTo("bible");
    }
        private void NavigateToRichdad()
    {
        Navigation.NavigateTo("richdad");
    }

    Book bible = new Book { Title = "The Bible", Author = "Unknown" };
    Book richdad = new Book { Title = "Rich dad, Poor dad", Author = "Robert T. Kiyosaki" };
    Book americanpsycho = new Book { Title = "American Psycho", Author = "Bret Easton Ellis" };
    Book harrypotter = new Book { Title = "Harry Potter - The Philsophers Stone", Author = "J.K Rowling" };
    Book redbook = new Book { Title = "The Red Book", Author = "Carl Gustav Jung" };
    Book elonmusk = new Book { Title = "Elon Musk", Author = "Ashlee Vance" };
    Book forceofnature = new Book { Title = "Force of Nature", Author = "Jane Harper" };
    Book communistmanifesto = new Book { Title = "The Communist Manifesto", Author = "Karl Marx & Friedrick Engels" };
    Book nineteenfourtyeight = new Book { Title = "1948", Author = "George Orwell" };
    Book dearmartin = new Book { Title = "Dear Martin", Author = "Nic Stone" };

    void AddBookToBasket(Book book)
    {
        BasketService.AddBook(book);
        Navigation.NavigateTo("fetchdata");
    }
}

