@page "/counter"
@inject NavigationManager Navigation
@inject BasketService BasketService

<h1>Add books to your basket</h1>

<div class="book-layout">
    <div id="book-box1" class="book-box">
        <img class="counter-images" id="bible-cover" src="/images/biblecover.jpeg" alt="Cover of the bible" @onclick="NavigateToBible">
        <div class="booktitle">
            <p>"The Bible"</p>
        </div>
        <div class="button-25">
            <button @onclick="() => AddBookToBasket(bible)">
                <span class="oi oi-basket" aria-hidden="true"></span> Add to basket
            </button>
        </div>
    </div>
    <div id="book-box2" class="book-box">
        <img class="counter-images" id="richdad-cover" src="/images/richdad.jpeg" alt="Cover of 'Rich Dad, Poor Dad'" @onclick="NavigateToRichdad">
        <div class="booktitle">
            <p>"Rich Dad, Poor Dad"</p>
        </div>
        <div class="button-25">
            <button @onclick="NavigateToFetchData">
                <span class="oi oi-basket" aria-hidden="true"></span> Add to basket
            </button>
        </div>
    </div>
    <div id="book-box3" class="book-box">
        <img class="counter-images" id="american-psycho-cover" src="/images/american-psycho.jpg" alt="Cover of American Psycho" @onclick="NavigateToEncyclopedia">
        <div class="booktitle">
            <p>"American Psycho"</p>
        </div>
        <div class="button-25">
            <button @onclick="() => AddBookToBasket(americanpsycho)">
                <span class="oi oi-basket" aria-hidden="true"></span> Add to basket
            </button>
        </div>
    </div>
    <div id="book-box4" class="book-box">
